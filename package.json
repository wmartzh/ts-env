{
  "name": "@wmartzh/ts-env",
  "version": "1.1.2-0",
  "description": "A simple tool to manage environment variables in TypeScript projects.",
  "main": "./lib/cjs/index.js",
  "types": "./lib/cjs/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wmartzh/ts-env"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    },
    "./cli": "./lib/cjs/main.js",
    "./env": "./lib/cjs/types/env.d.ts"
  },
  "author": "Wilian Martinez <wmartzh@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "del-cli ./lib",
    "create-pre-release": "npm version prerelease",
    "create-release": "npm version patch",
    "pre-relase": "npm run clean && npm run test && npm run build",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && move-file lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "test": "jest"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "del-cli": "^5.1.0",
    "js-yaml": "^4.1.0",
    "move-file-cli": "^3.0.0",
    "toml": "^3.0.0",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3"
  },
  "devDependencies": {
    "@swc/core": "^1.5.7",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "jest": "^29.7.0",
    "nodemon": "^3.1.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "jest": {
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "@swc/jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "<rootDir>/cli"
    ]
  },
  "bin": {
    "@wmartzh/ts-env": "./lib/cjs/main.js"
  },
  "engines": {
    "node": ">=16.x"
  },
  "keywords": [
    "typescript",
    "environment",
    "dotenv",
    "env",
    "yaml",
    "json",
    "toml"
  ]
}
