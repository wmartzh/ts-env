{
  "name": "@wmartzh/ts-env",
  "version": "1.0.20-0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/wmartzh/ts-env"
  },
  "author": "Wilian Martinez <wmartzh@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch ./src --exec \"ts-node ./src/index.ts\"",
    "test": "jest"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "toml": "^3.0.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3"
  },
  "devDependencies": {
    "@swc/core": "^1.3.96",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "@swc/jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "<rootDir>/cli"
    ]
  },
  "bin": {
    "ts-env": "./dist/index.js"
  },
  "engines": {
    "node": ">=16.x"
  }
}
